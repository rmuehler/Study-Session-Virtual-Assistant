{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Student Account",
      "horizontalAlignment": "center"
    },
    {
      "type": "Input.Text",
      "placeholder": "Student Name",
      "value":  "Placeholder Name",
      "style": "text",
      "maxLength": 0,
      "id": "StudentVal"
    },
    {
      "type": "Input.Text",
      "placeholder": "Student Email",
      "value":  "Placeholder Email",
      "style": "email",
      "maxLength": 0,
      "id": "StudentEmailVal"
    },
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Student Availability",
      "horizontalAlignment": "center"
    },
    {
      "type": "TextBlock",
      "size": "small",
      "weight": "bolder",
      "text": "Dates",
      "horizontalAlignment": "left"
    },
    {
      "type": "Input.Date",
      "placeholder": "Due Date",
      "id": "DateVal",
      "value": "2017-09-20"
    },
    {
      "type": "TextBlock",
      "size": "small",
      "weight": "bolder",
      "text": "Time",
      "horizontalAlignment": "left"
    },

    {
      "type": "Input.ChoiceSet",
      "id": "StudentTimeSelectVal",
      "style": "compact",
      "value": "1",
      "choices": [
        {
          "title": "9am-11am",
          "value": "1"
        },
        {
          "title": "11am-2pm",
          "value": "2"
        },
        {
          "title": "3pm-6pm",
          "value": "3"
        },
        {
          "title": "6pm-9pm",
          "value": "4"
        }

      ]
    },
    {
      "type": "TextBlock",
      "text": "What course do you need help with? (multiselect)"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "StudentCourseSelectVal",
      "isMultiSelect": true,
      "value": "1,10",
      "choices": [
        {
          "title": "Program Design",
          "value": "1"
        },
        {
          "title": "Computer Organization",
          "value": "2"
        },
        {
          "title": "Object Oriented",
          "value": "3"
        },
        {
          "title": "Networks",
          "value": "4"
        },
        {
          "title": "Logic Design",
          "value": "5"
        },
        {
          "title": "Computer Architecture",
          "value": "6"
        },
        {
          "title": "Alogorithms",
          "value": "7"
        },
        {
          "title": "Operating Systems",
          "value": "8"
        },
        {
          "title": "Physics",
          "value": "9"
        },
        {
          "title": "Calculus",
          "value": "10"
        }
      ]
    }

  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "data": {
        "id": "1234567890"
      }
    },
    {
      "type": "Action.ShowCard",
      "title": "Comments from Student",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "Input.Text",
            "placeholder": "enter comment",
            "style": "text",
            "maxLength": 0,
            "id": "CommentVal"
          }
        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "OK",
            "data": {
              "SaveStudentProfile": "true"
            }
          }
        ]
      }
    }
  ]
}
