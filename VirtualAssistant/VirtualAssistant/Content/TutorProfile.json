{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Tutor Account",
      "horizontalAlignment": "center"
    },
    {
      "type": "Input.Text",
      "placeholder": "Tutor Name",
      "style": "text",
      "maxLength": 0,
      "id": "TutorVal"
    },
    {
      "type": "Input.Text",
      "placeholder": "Tutor Email",
      "style": "email",
      "maxLength": 0,
      "id": "TutorEmailVal"
    },
    {
      "type": "TextBlock",
      "text": "What courses do you tutor?"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "TutorCourseSelectVal",
      "isMultiSelect": true,
      "value": "1,10",
      "choices": [
        {
          "title": "Algebra",
          "value": "algebra"
        },
        {
          "title": "Algorithms",
          "value": "algorithms"
        },
        {
          "title": "Architecture",
          "value": "architecture"
        },
        {
          "title": "Biology",
          "value": "biology"
        },
        {
          "title": "Calculus I",
          "value": "calculus1"
        },
        {
          "title": "Calculus II",
          "value": "calculus2"
        },
        {
          "title": "Calculus III",
          "value": "calculus3"
        },
        {
          "title": "Chemistry",
          "value": "chemistry"
        },
        {
          "title": "Composition",
          "value": "composition"
        },
        {
          "title": "Economics",
          "value": "economics"
        },
        {
          "title": "Physics I",
          "value": "physics1"
        },
        {
          "title": "Physics II",
          "value": "physics2"
        }
      ]
    }

  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "data": {
        "id": "SaveTutorProfile"
      }
    }
  ]
}

